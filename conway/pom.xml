<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
         https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.conway</groupId>
  <artifactId>conway</artifactId>
  <version>0.0.1</version>
  <packaging>jar</packaging>

  <name>Conway's Game of Life</name>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <java.version>21</java.version>
    <javafx.version>21.0.6</javafx.version>
  </properties>

  <dependencies>
    <!-- JavaFX dependencies (downloaded from Maven Central) -->
    <dependency>
      <groupId>org.openjfx</groupId>
      <artifactId>javafx-controls</artifactId>
      <version>${javafx.version}</version>
    </dependency>
    <!-- Add any additional JavaFX modules if needed -->
  </dependencies>

  <build>
    <plugins>
      <!-- Maven Compiler Plugin -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <!-- Use the release flag so that module system is enabled -->
          <release>${java.version}</release>
          <compilerArgs>
            <!-- Set the module path to your local JavaFX SDK -->
            <arg>--module-path</arg>
            <arg>/opt/javafx-sdk/javafx-sdk-${javafx.version}/lib</arg>
            <arg>--add-modules</arg>
            <arg>javafx.controls</arg>
          </compilerArgs>
        </configuration>
      </plugin>

      <!-- Maven Jar Plugin for building an executable jar -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.3.0</version>
        <configuration>
          <archive>
            <manifest>
              <!-- Specify your main class -->
              <mainClass>com.conway.conwayApp</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>

      <!-- Exec Maven Plugin for running the jar from Maven -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>3.1.0</version>
        <configuration>
          <executable>java</executable>
          <arguments>
            <argument>--module-path</argument>
            <argument>/opt/javafx-sdk/javafx-sdk-${javafx.version}/lib</argument>
            <argument>--add-modules</argument>
            <argument>javafx.controls</argument>
            <argument>-jar</argument>
            <argument>${project.build.directory}/${project.build.finalName}.jar</argument>
          </arguments>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
